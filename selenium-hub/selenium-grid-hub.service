[Unit]
Description=Selenium Grid Hub
After=docker.service

[Service]
Type=notify
NotifyAccess=all
TimeoutStartSec=120
TimeoutStopSec=15
Restart=always
RestartSec=10s
ExecStartPre=-/usr/bin/docker kill selenium-hub
ExecStartPre=-/usr/bin/docker rm selenium-hub
ExecStartPre=-/usr/bin/docker pull selenium/hub:latest
ExecStart=/usr/bin/docker run -p 4444:4444 --name selenium-hub selenium/hub:latest
ExecStop=/usr/bin/docker stop selenium-hub

[Install]
WantedBy=multi-user.target
